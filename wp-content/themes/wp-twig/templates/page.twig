{% extends "base.twig" %}

{% set main_grid_class = display_sidebar == 'yes' ? 'col-md-8' : 'col-md-12' %}

{% block content %}

	<div class="row">
			<div class="content-wrapper {{ main_grid_class }}">
				<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
					<section class="article-content">
						{% if page_meta_hide_page_title != 'on' %}
							<h1 class="article-h1">{{post.title}}</h1>
						{% endif %}
						<div class="article-body">
							{{post.content}}
						</div>
					</section>
				</article>
			</div><!-- /content-wrapper -->
			{% if display_sidebar == 'yes' %}
				{% include "sidebar.twig" %}
			{% endif %}

	</div>

{% endblock %}

